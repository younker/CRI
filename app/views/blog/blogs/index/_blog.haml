
%dl.clearfix
  %dt
    = image_tag blog.photo.photo(:medium)
  %dd
    %h3
      = link_to blog.title, construct_blog_path(blog, :show)

    %h4= posted_by_on(blog)

    %p
      = sanitize blog.teaser.truncate(325), :tags => allowable_html, :attributes => %w(href)

    = link_to 'Read more', construct_blog_path(blog, :show), :class => :button

